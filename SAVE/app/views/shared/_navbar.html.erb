<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to home_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %> GROUPE EN TRAIN
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->

      <%= link_to '<i class="fa fa-search"></i> Nouvelle recherche'.html_safe, home_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to '<i class="fa fa-calendar"></i> Mes reservations'.html_safe, bookings_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to '<i class="far fa-list-alt"></i> Liste des voyages en cour de remplissage'.html_safe, all_bookings_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% if current_user.admin == true %>
       <%= link_to '<i class="fas fa-columns"></i> Panel administrateur'.html_safe, admin_trips_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
      <%= link_to edit_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
      <% end %>
      <%= link_to destroy_user_session_path, class: "navbar-wagon-item navbar-wagon-link", method: :delete do %>
        <i class="fas fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
      <% end %>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to '<i class="fa fa-search"></i> Nouvelle recherche'.html_safe, home_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to '<i class="far fa-list-alt"></i> Liste des voyages en cour de remplissage'.html_safe, all_bookings_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <% if user_signed_in? %>
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown" style="color:#00a896;"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">

        <li><%= link_to '<i class="fa fa-search"></i> Nouvelle recherche'.html_safe, home_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to '<i class="fa fa-calendar"></i> Mes reservations'.html_safe, bookings_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to '<i class="far fa-list-alt"></i> Liste des voyages en cour de remplissage'.html_safe, all_bookings_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% if current_user.admin == true %>
        <li><%= link_to '<i class="fas fa-columns"></i> Panel administrateur'.html_safe, admin_trips_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <% end %>
        <li><%= link_to edit_user_registration_path do %><i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %><% end %></li>
        <li><%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %><% end %></li>
      </ul>
    </div>
    <% else %>
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>
</div>

