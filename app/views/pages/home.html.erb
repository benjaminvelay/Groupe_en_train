<div class="banner">
  <div class="banner-content">
    <h1><span>Groupe en Train</span></h1>
      <div class="row">
        <div class="col-xs-12 col-sm-10-offset-2 col-md-10-offset-2 ">
          <%= simple_form_for :search, url: trips_path, wrapper: :inline_form, html: { class: 'form-inline' }, method: :get do |f|  %>
            <%= f.input :station_departure, required: true, autofocus: true, placeholder: "Gare de départ" %>
            <%= f.input :station_arrival, required: true, autofocus: true, placeholder: "Gare d'arrivée" %>
            <%= f.input :departure_at, as: :date, required: true, autofocus: true, html5: true, label: false, placeholder: "Date de départ" %>
            <%#= f.input :arrival_at, as: :date, required: true, autofocus: true, html5: true, label: false, placeholder: "Date d'arrivée" %>
            <%= f.button :submit, "Recherche", class: "btn-confirm" %>
          <% end %>
      </div>
    </div>
  </div>
<!-- <a href="#description"><i class="fa fa-angle-down arrow"></i></a> -->
</div>


