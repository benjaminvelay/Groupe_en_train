
<div class="grid">
  <div class="treatout" id="relative">
    <h1 id="relative">Réservez vos billets de train</h1>
    <p>Économisez jusqu'à 60% en accédant facilement au tarif de groupe</p>
  </div>
  <div class="image">
    <%= image_tag "image-home.jpg", width: '100%', height: '25%' %>
  </div>
</div>

  <div id="absolute" class="form-search">
    <%= simple_form_for :search, url: trips_path,size: 20, method: :get do |f|  %>
      <%= f.input :station_departure, label: 'Gare de départ', required: true, autofocus: true, placeholder: "Gare de départ" %>
      <%= f.input :station_arrival, label: "Gare d'arrivé", required: true, autofocus: true, placeholder: "Gare d'arrivée" %>
      <%= f.input :departure_at, as: :date,label: "Date du départ", required: true, autofocus: true, html5: true, placeholder: "Date de départ" %>
      <%= f.button :submit, "Rechercher", class: "btn btn-success" %>
    <% end %>
  </div>

