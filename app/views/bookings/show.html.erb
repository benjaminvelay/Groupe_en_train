<div class="container">
  <div class="row text-center">
    <div class="col-lg-8 col-md-8 col-md-offset-2">
      <h3>
        Temps restant pour réserver ce billet
      </h3>
      <div class="your-clock" data-date="<%= @booking.remaining_seconds %>"></div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
      <p class="your-trip"><%= @booking.trip.station_arrival %>
        <i class="fas fa-arrow-right"> </i>
        <%= @booking.trip.station_departure%>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-8 col-lg-offset-2">
      <div class="trip-card-fix">
        <div class="container-fluid">
          <div class="row" id="relative-index">
            <div class="col-xs-4"><%= @booking.trip.departure_at.strftime('%a %d %b %Y') %></div>
            <div class="col-xs-2 hidden-xs">Prix individuel</div>
            <div class="col-xs-2 hidden-xs">Prix groupé</div>
            <div class="col-xs-2 visible-xs">Prix <p><i class="fas fa-user-alt"></i></p></div>
            <div class="col-xs-2 visible-xs">Prix <p><i class="fas fa-users"></i></p></div>
            <div class="col-xs-4"></div>
          </div>
        </div>
      </div>

        <div class="trip-card-booking">
          <div class="container-fluid">
            <div class="row">
              <div class="hidden-xs">
                <div class="col-xs-4">
                  <div class="flex-heure-start-end">
                    <p> <%= @booking.trip.departure_at.strftime('%H:%M') %> </p>
                    <div class="flex-arrow-duration">
                      <p> <i class="fas fa-arrow-right"></i> </p>
                      <span>
                        <%= @booking.trip.duration %>
                      </span>
                    </div>
                    <p> <%= @booking.trip.arrival_at.strftime('%H:%M') %> </p>
                  </div>
                </div>
              </div>
              <div class="visible-xs">
                <div class="col-xs-4">
                  <div class="flex-heure-start-end-xs">
                    <p> <%= @booking.trip.departure_at %> </p>
                    <div class="flex-arrow-duration">
                      <p>
                        <%= @booking.trip.arrival_at %>
                      </p>
                    </div>
                    <span class="duration-xs"><%= @booking.trip.duration %> </span>
                  </div>
                </div>
              </div>
              <div class="col-xs-2"> <%= @booking.trip.individual_sncf_price_cents %></div>
              <div class="col-xs-2"><%= @booking.trip.individual_group_price_cents %>.0€</div>

              <div class="col-xs-4">
                <%= link_to bookings_path(departure_date: @booking.trip.departure_at, arrival_date: @booking.trip.arrival_at, duration: @booking.trip.duration, individual_sncf_price_cents: @booking.trip.individual_sncf_price_cents, individual_group_price_cents: @booking.trip.individual_group_price_cents, station_departure: @booking.trip.station_departure, station_arrival: @booking.trip.station_arrival
                  ),
                  method: :post,class: "btn btn-success" do %>
                  <div class="hidden-xs visible-md visible-lg">
                      Continuer
                  </div>
                  <div class="hidden-md hidden-lg">
                      Choisir
                  </div>
                <% end %>
                 <p> <strong>Quantitée disponible :</strong> <%= @booking.trip.bookings.count.to_i %> places.</p>
                <p><iframe src="https://www.facebook.com/plugins/share_button.php?href=http%3A%2F%2Fwww.groupe-en-train.fr%2Fbookings%2Fall&layout=button&size=small&mobile_iframe=true&width=59&height=20&appId" width="100vh" height="20" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe></p>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>

