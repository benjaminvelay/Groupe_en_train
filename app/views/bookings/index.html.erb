<div class="container">
  <div class="grid-booking-index">
    <div class="title-trajet-reserve">
      <p>Trajet réservé</p>
    </div>
    <div class="title-trajet-paye">
      <p>Trajet payé</p>
    </div>
    <div class="title-trajet-effectue">
      <p>Trajet effectué</p>
    </div>
    <div class="trajet-reserve">
      <div class="trip-card-bookings-index">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-4 col-lg-4 col-lg-4">
              <%= @bookings.first.trip.departure_at.strftime('%a %d %b %Y') %>
            </div>
            <div class="col-xs-4 col-lg-4 col-lg-4">
              <div class="flex-heure-start-end-xs">
                <p>
                  <%= @bookings.first.trip.departure_at.strftime('%H:%M') %>
                </p>
                <div class="flex-arrow-duration">
                  <p>
                    <%= @bookings.first.trip.arrival_at.strftime('%H:%M') %>
                  </p>
                </div>
                <span>
                  <%= @bookings.first.trip.duration %>
                </span>
              </div>
            </div>
            <div class="col-xs-2">
              <%= @bookings.first.trip.individual_group_price_cents %>.0€
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="trajet-paye">

  </div>
  <div class="trajet-effectue">

  </div>
</div>


