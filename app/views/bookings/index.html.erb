<div class="wrapper">
  <div class="container">
       <h2>Récapitulatif des réservations</h2>
    <div class="cards">
      <div class="row">
      </div>
      <div class="row explains steps">
        <div class="col-lg-4">
          

          <div class="card">
                <% @bookings.each do |booking| %>
                <li>Status: <%= booking.state %></li>
                <li>Trip: <%= booking.trip.station_departure %> to <%= booking.trip.station_arrival %></li>
                <li>At: <%= booking.trip.departure_at %></li>
                </ul>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="card">

            <li>Status: <%= booking.state %></li>
         
          </div>
        </div>
        <div class="col-lg-4">
          <div class="card">
           <li>Status: <%= booking.state %></li>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>


 

<div id="reviews">
    <% if @reviews.blank? %>
      Leave a review
      <%= render 'reviews/review_form', review: @review %>
    <% else %>
      <% @reviews.each do |review| %>
        <%= render 'reviews/review_style', review: @review %>
      <% end %>
      <% end %>
    <% end %> 
  </div>
</div>


